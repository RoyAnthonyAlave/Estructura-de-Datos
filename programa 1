#include <iostream>
using namespace std;

int main() {
    int a, b, c, promedio;

    cout << "Ingrese el primer número: ";
    cin >> a;

    cout << "Ingrese el segundo número: ";
    cin >> b;

    cout << "Ingrese el tercer número: ";
    cin >> c;

    promedio = (a + b + c) / 3;

    cout << "El promedio es: " << promedio << endl;

    return 0;
}
